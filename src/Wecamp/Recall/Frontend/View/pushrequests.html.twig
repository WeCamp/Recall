{% extends 'layout.html.twig' %}

{% block title %}Push requests{% endblock %}

{% block content %}

    <h1 class="page-header">Push requests</h1>

    <div class="list-group timeline">
        {% for pushrequest in pushrequests %}
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">{{ pushrequest.branch }}</h4>
                <span class="list-group-item-date">{{ pushrequest.event.description }}</span>
                <div style="float: right">
                    <form action="/pushrequest-accept/{{ pushrequest.branch }}">
                    <input type="submit" class="btn btn-success btn-sm" value="Accept"/>
                    </form>
                    <form action="/pushrequest-deny/{{ pushrequest.branch }}">
                    <input type="submit" class="btn btn-danger btn-sm" value="Deny"/>
                    </form>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
